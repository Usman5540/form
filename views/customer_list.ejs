<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer List</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Customer List</h1>
      <a href="/customers/new">Add New Customer</a>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Company</th>
            <th>Person</th>
            <th>Designation</th>
            <th>Office Address</th>
            <th>Office Phone</th>
            <th>Residence Address</th>
            <th>Fax</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Website</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach(customer => { %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= customer.company %></td>
            <td><%= customer.person %></td>
            <td><%= customer.designation %></td>
            <td><%= customer.officeAddress %></td>
            <td><%= customer.officePhone %></td>
            <td><%= customer.residenceAddress %></td>
            <td><%= customer.fax %></td>
            <td><%= customer.mobile %></td>
            <td><%= customer.email %></td>
            <td><%= customer.website %></td>
            <td><%= customer.description %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add New Customer</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Add New Customer</h1>
      <form action="/customers/new" method="POST">
        <label for="company">Company:</label>
        <input type="text" id="company" name="company" required />

        <label for="person">Person:</label>
        <input type="text" id="person" name="person" required />

        <label for="designation">Designation:</label>
        <input type="text" id="designation" name="designation" required />

        <label for="officeAddress">Office Address:</label>
        <input type="text" id="officeAddress" name="officeAddress" required />

        <label for="officePhone">Office Phone:</label>
        <input type="tel" id="officePhone" name="officePhone" required />

        <label for="residenceAddress">Residence Address:</label>
        <input
          type="text"
          id="residenceAddress"
          name="residenceAddress"
          required
        />

        <label for="fax">Fax:</label>
        <input type="text" id="fax" name="fax" />

        <label for="mobile">Mobile:</label>
        <input type="tel" id="mobile" name="mobile" required />

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required />

        <label for="website">Website:</label>
        <input type="url" id="website" name="website" />

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4"></textarea>

        <button type="submit">Add Customer</button>
      </form>
    </div>
  </body>
</html>
